<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <android.support.v4.view.ViewPager
        android:id="@+id/vp_guid_setpages"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent" >
    </android.support.v4.view.ViewPager>

    <Button
        android:visibility="gone"
        android:textColor="@color/bt_text_selector"
        android:background="@drawable/bt_bg_selector"
        android:id="@+id/bt_guid_expr"
        android:padding="10dp"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="40dip"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="开始体验"
        android:textSize="22sp" />

    <!-- 点的容器 -->

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginBottom="20dip" >

        <LinearLayout
            android:id="@+id/ll_guid_graypoints"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <!--
            <View
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/v_point_gray" >
            </View>

            <View
                android:layout_marginLeft="10dip"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/v_point_gray" >
            </View>

            <View
                android:layout_marginLeft="10dip"
                android:layout_width="10dip"
                android:layout_height="10dip"
                android:background="@drawable/v_point_gray" >
            </View>
            -->
        </LinearLayout>

        <View
            android:id="@+id/v_guid_redpoint"
            android:layout_width="10dip"
            android:layout_height="10dip"
            android:background="@drawable/v_point_red" >
        </View>
    </FrameLayout>

</RelativeLayout>